{
  "compilerOptions": {
    "baseUrl": ".",
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "pretty": true,
    "noImplicitAny": false,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES5",
    "module": "CommonJS",
    "declaration": true,
    "allowJs": false,
    "lib": ["es6", "dom"],
    "paths": {
      "@talelin/monitor-*": ["packages/*/src"]
    }
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules"]
}
